# Example: stamp a single cluster 's1' in eu-south-1 (Milan), close to Malta
region      = "eu-south-1"
base_domain = "lab"
ssh_key_name= "your-ec2-key"
admin_cidr  = "203.0.113.10/32" # jump box public IP/32

# Global tags (provider default_tags); 'customer=aps' is included by default.
common_tags = {
  customer = "aps"
  Project  = "OCP-Training"
}

clusters = {
  s1 = {
    vpc_cidr            = "10.38.0.0/16"
    public_subnet_cidrs = ["10.38.0.0/20","10.38.16.0/20","10.38.32.0/20"]
    ign_bootstrap_path  = "/Users/you/ocp-ign/s1/bootstrap.ign"
    ign_master_path     = "/Users/you/ocp-ign/s1/master.ign"
    enabled             = true
    extra_tags          = { Owner = "student1" }
  }
  # Add more later:
  # s2 = {
